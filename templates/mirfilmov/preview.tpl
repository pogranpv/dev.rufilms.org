[short-preview]
<div class="shortstory">
	<div class="short">
        <a href="{full-link}"><img src="[xfvalue_poster]"><h3>{title}</h3></a>
    </div>
	<div class="short-year">2012 год</div>
	<a class="short-v" href="{full-link}"><h3>Смотреть онлайн</h3></a>
</div>
[/short-preview]
[full-preview]
<div class="sortn"><h3>{title}</h3></div>
<div class="fullstory">
<div class="full-left">
    <div class="short"><img src="[xfvalue_poster]"></div>
	<div class="full-vie"><h3>{views}</h3></div>
	<div class="full-v">{rating}<h3>{vote-num}</h3></div>
	<div class='pluso pluso-theme-light pluso-round pluso-small'><div class='pluso-more-container'><a class='pluso-more' href=''></a></div><a class='pluso-facebook'></a><a class='pluso-twitter'></a><a class='pluso-vkontakte'></a><a class='pluso-odnoklassniki'></a><a class='pluso-google'></a><a class='pluso-livejournal'></a><a class='pluso-moimir'></a><a class='pluso-yandex'></a><a class='pluso-liveinternet'></a></div>
